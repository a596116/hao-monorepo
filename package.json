{
  "name": "hao-monorepo",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "pnpm --parallel --recursive dev",
    "dev:t1": "pnpm --filter vue-project dev",
    "dev:t2": "pnpm --filter vuetify-project dev",
    "build": "pnpm --parallel --recursive build",
    "build:t1": "pnpm --filter vue-project build",
    "build:t2": "pnpm --filter vuetify-project build",
    "clean": "pnpm --recursive clean",
    "lint": "pnpm run lint:prettier && pnpm run lint:eslint",
    "lint:prettier": "prettier --write \"**/*.{js,ts,mjs,cjs,json,tsx,css,less,scss,vue,html,md}\"",
    "lint:eslint": "eslint --cache --max-warnings 0  \"apps/**/**/*.{ts,js,tsx,jsx,vue}\" --fix",
    "commit": "git add . && git-cz",
    "prepare": "husky"
  },
  "author": "LOA Team",
  "license": "UNLICENSED",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@eslint/js": "^9.38.0",
    "@types/node": "^24.9.1",
    "@vue/eslint-config-typescript": "^14.6.0",
    "commitizen": "^4.3.1",
    "cz-git": "^1.12.0",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-vue": "^10.5.1",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "prettier": "^3.6.2",
    "typescript": "catalog:",
    "typescript-eslint": "^8.46.2"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git"
    }
  }
}
